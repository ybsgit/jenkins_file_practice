pipeline{
    agent{
        docker{
            image 'maven:3.8.1-adoptopenjdk-11'
            args '-v $HOME/.m2:/root/.m2'
            args '-v $PWD:/app'
        }
    }
    stages{
        stage("Buikd"){
            steps{
                sh 'cd /app'
                sh 'mvn clean install package'
            }
        }
    }
}